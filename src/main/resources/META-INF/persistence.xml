<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="default" transaction-type="JTA">
        <jta-data-source>jdbc/DSTest</jta-data-source>
        <class>com.example.lab5_ultimate.entity.AddIngredientEntity</class>
        <class>com.example.lab5_ultimate.entity.DrinkEntity</class>
        <class>com.example.lab5_ultimate.entity.IngredientEntity</class>
        <class>com.example.lab5_ultimate.entity.ReceiptEntity</class>
        <class>com.example.lab5_ultimate.entity.UserEntity</class>
        <properties>
            <property name="hibernate.connection.url" value="jdbc:postgresql://localhost:5433/coffee"/>
            <property name="hibernate.connection.driver_class" value="org.postgresql.Driver"/>
            <property name="hibernate.connection.username" value="postgres"/>
            <property name="hibernate.connection.password" value="password"/>
        </properties>
    </persistence-unit>
</persistence>
